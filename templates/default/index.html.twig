{% extends 'base.html.twig' %}

{% block title %}Home - Handball Rochettois
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{ asset('css/site/accueil.css') }}">
{% endblock %}

{% block body %}

	<h2>Accueil</h2>

	<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
            {% for equipe in equipes %}
                {% if equipe.id == 1 %}
                    <div class="carousel-item active " data-bs-interval="5000">
                        <img src="{{ asset(equipe.image) }}" class="d-block w-100">
                    </div>
                {% else %}
                    <div class="carousel-item" data-bs-interval="5000">
                        <img src="{{ asset(equipe.image) }}" class="d-block w-100">
                    </div>
                {% endif %}
            {% endfor %}
		</div>
	</div>
    <hr>
	<div class="cards">
		{% for post in posts %}
			<div class="card m-3">
				{% if post.image != null %}
					<img src="{{ asset(post.image) }}" class="card-img-top">
				{% endif %}
				<div class="card-body">
					{% if post.titre != null %}
						<h5 class="card-title fw-bold">{{ post.titre }}</h5>
					{% endif %}
					{% if post.paragraphe != null %}
						<p class="card-text text-justify">{{ post.paragraphe }}</p>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
