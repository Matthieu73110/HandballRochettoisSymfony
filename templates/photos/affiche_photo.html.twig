{% extends 'base.html.twig' %}

{% block title %}{{nom_repertoire[0].nom}} - Handball Rochettois{% endblock %}

{% block css %}<link rel="stylesheet" href="{{ asset('css/affiche_photo.css') }}">{% endblock %}

{% block body %}

    <h2>{{nom_repertoire[0].nom}}</h2>
    <div id="carouselExampleFade" class="carousel slide carousel-fade">
        <div class="carousel-inner w-100">
            {% for photo in photos %}
                {% if loop.first %}
                    <div class="carousel-item active">
                        <img src="{{ asset(photo.image) }}" class="d-block w-75" alt={{photo.image}}>
                    </div>
                {% endif %}
                <div class="carousel-item">
                    <img src="{{ asset(photo.image) }}" class="d-block w-75" alt={{photo.image}}>
                </div>
            {% endfor %}
         </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

{% endblock %}

{% block js %}
    <script>changementAcitveLink('Photos')</script>
{% endblock %}
