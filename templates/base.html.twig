<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Site web du Handball Rochettois">
        <meta name="author" content="Matthieu Fanget">
        <link rel="icon" href="{{ asset('images/logo.ico') }}">
        <title>
            {% block title %}{%  endblock %} - Handball Rochettois
        </title>
        <!-- CSS : Bootstrap, Fontawsome, projet (styles communs à tout le projet) -->
        <link href="{{ asset('css/bootstrap-5/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/fontawsome-5.all.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/base.css') }}" rel="stylesheet">
        <link href="{{ asset('css/footer.css') }}" rel="stylesheet">
        <!-- debut du block css -->
        {% block css %}{%  endblock %}
        <!-- fin du block css -->
    </head>
    <body>
        <header>
            <div class="gros_flex">
                {% include "navbar.html.twig"  %} 
                <div class="flex">
                <a href="{{ path('app_default')}}"><img src="{{ asset('images/logo.png')}}" alt="Logo du club" title="Logo du club"></a>
                <div class="flex_title">
                    <h1>handball rochettois</h1>
                    <p>{% trans %}slogan{% endtrans %}</p>
                </div>
                </div>
            </div>
        </header>
        <main role="main" class="container-fluid">
            <div class="row">
                {# <div class="col-md-10"> #}
                    <div class="main-div">
                        <!-- debut du block body -->
                        {%  block body %}
                            <h1><i>Développement en cours...</i></h1>
                        {%  endblock %}
                        <!-- fin du block body -->
                    </div>
                {# </div> #}
            </div>
        </main>
        {% include "footer.html.twig"  %} 
        <!-- JS : JQuery, Bootstrap -->
        <script src="{{ asset('js/jquery-3/jquery.slim.min.js') }}" ></script>
        <script src="{{ asset('js/bootstrap-5/bootstrap.bundle.min.js') }}" ></script>
        <script src="{{ asset('js/bootstrap-5/bootstrap.bundle.min.js') }}" ></script>
        <script src="https://kit.fontawesome.com/1ee5ffc8e6.js" crossorigin="anonymous"></script>
        <script>
            function changementAcitveLink(nomLink) {
                var navLink = document.getElementsByClassName('navbar-nav')
                for (var i = 0; i < navLink[0].children.length; i++) {
                    if (navLink[0].children[i].children[0].innerHTML   == nomLink) {
                        navLink[0].children[i].children[0].classList.add("active")
                    }
                }
            }

            function changePictureHover(element) {
                switch (element.id) {
                    case 'facebook':
                        element.src = "{{ asset('images/reseaux-sociaux/facebook-blue.png') }}" ;
                        break;
                    case 'instagram':
                        element.src = "{{ asset('images/reseaux-sociaux/instagram-blue.png') }}" ;
                        break;
                    case 'mail':
                        element.src = "{{ asset('images/reseaux-sociaux/email-blue.png') }}" ;
                        break;
                    case 'pen':
                        element.src = "{{ asset('images/icons/pen-blue.png') }}" ;
                        break;
                    case 'poubelle':
                        element.src = "{{ asset('images/icons/poubelle-blue.png') }}" ;
                        break;
                    case 'oeil':
                        element.src = "{{ asset('images/icons/oeil-blue.png') }}" ;
                        break;
                }
            }

            function changePictureUnHover(element) {
                switch (element.id) {
                        case 'facebook':
                        element.src = "{{ asset('images/reseaux-sociaux/facebook.png') }}" ;
                    break;
                        case 'instagram':
                        element.src = "{{ asset('images/reseaux-sociaux/instagram.png') }}" ;
                    break;
                    case 'mail':
                        element.src = "{{ asset('images/reseaux-sociaux/email.png') }}" ;
                        break;
                    case 'pen':
                        element.src = "{{ asset('images/icons/pen.png') }}" ;
                        break;
                    case 'poubelle':
                        element.src = "{{ asset('images/icons/poubelle.png') }}" ;
                        break;
                    case 'oeil':
                        element.src = "{{ asset('images/icons/oeil.png') }}" ;
                        break;
                }
            }        
        </script>
        <!-- debut du block js -->
        {% block js %}{%  endblock %}
        <!-- fin du block js -->
    </body>
</html>