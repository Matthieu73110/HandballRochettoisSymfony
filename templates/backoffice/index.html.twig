{% extends 'base.html.twig' %}

{% block title %}BackOffice{% endblock %}

{% block css %} <link rel="stylesheet" href="{{ asset('css/backoffice/backoffice.css') }}"> {% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Nom</th>
                <th scope="col"></th>
            </tr>
        </thead>
        {# <a class="m-1"><img id="poubelle" onmouseover="changePictureHover(this)" onmouseout="changePictureUnHover(this)" src="{{ asset('images/icons/poubelle.png') }}"> </a> #}
        <tbody>
            {% set i = 1 %}
            {% for table in tables %}
                <tr scope="row" class="fw-light">
                    <th>{{i}}</th>
                    <th>{{table.name_table}}</th>
                    <th><div class="btn-group"> <a href="{{ path('app_backoffice_show', {'name_table': table["Tables_in_handballrochettois"]}) }}" class="m-1"><img id="oeil" onmouseover="changePictureHover(this)" onmouseout="changePictureUnHover(this)" title="Visualiser" src="{{ asset('images/icons/oeil.png') }}"></a> <a href="{{ path('app_backoffice_edit', {'name_table': table["Tables_in_handballrochettois"]}) }}" class="m-1"><img id="pen" onmouseover="changePictureHover(this)" onmouseout="changePictureUnHover(this)" title="Editer" src="{{ asset('images/icons/pen.png') }}"></a></div></th>
                </tr>
                {% set i = i + 1 %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

