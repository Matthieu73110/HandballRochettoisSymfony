{% extends 'base.html.twig' %}

{% block title %}BackOffice{% endblock %}

{% block css %} <link rel="stylesheet" href="{{ asset('css/backoffice/edit.css') }}"> {% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
            <tr>
                {% for column, _ in tableContent[0] %}
                    <th scope="col">{{ column }}</th>
                {% endfor %}
            </tr>
        </thead>
        {# <a class="m-1"><img id="poubelle" onmouseover="changePictureHover(this)" onmouseout="changePictureUnHover(this)" src="{{ asset('images/icons/poubelle.png') }}"> </a> #}
        <tbody>
           {% for row in tableContent %}
                <tr scope="row">
                    {% for _, value in row %}
                        <td>{{ value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

